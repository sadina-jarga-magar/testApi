<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowEmployeeActivity">


    <Button
        android:id="@+id/btnshowemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show all employee"
        android:textAlignment="center"
        android:layout_margin="30dp"
        />
    <Button
        android:id="@+id/btnregisteremp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register employee"
        android:layout_margin="30dp" />

    <Button
        android:id="@+id/btnsearchemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search employee"
        android:layout_margin="30dp"
        />

    <Button
        android:id="@+id/btnupdeleteemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update/delete employee"
        android:layout_margin="30dp" />

</LinearLayout>